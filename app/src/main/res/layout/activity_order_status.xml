<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderStatus">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Status"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textAlignment="center"
        android:background="#4B0082"
        android:padding="10dp"
        android:textSize="25sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delivery To"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ashwin"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="White House"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kannur"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kerala"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:textStyle="italic"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ZipCode - 737277"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:layout_marginLeft="30dp"
                    android:textStyle="italic"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3A3636"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items Ordered  &#x231b;"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:text="Item"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:padding="3dip"
                            android:textAlignment="center"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="Quantity"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="3dip"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="Price"
                            android:textColor="#000"
                            android:gravity="right"
                            android:padding="3dip"
                            android:textAlignment="center"
                            android:layout_marginRight="20dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Mughal Table"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textAlignment="center"
                            android:padding="3dip"
                            android:textStyle="italic"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:padding="3dip"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="7400"
                            android:textColor="#000"
                            android:gravity="right"
                            android:padding="3dip"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:layout_marginRight="20dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price - 13000 /-"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#3A3636"
                android:layout_margin="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items Delivered  &#x2713;"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="5dp"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>
                        <TextView
                            android:text="Item"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:padding="3dip"
                            android:textAlignment="center"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="Quantity"
                            android:textColor="#000"
                            android:textSize="18sp"
                            android:textAlignment="center"
                            android:padding="3dip"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="Price"
                            android:textColor="#000"
                            android:gravity="right"
                            android:padding="3dip"
                            android:textAlignment="center"
                            android:layout_marginRight="20dp"
                            android:textSize="18sp"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:text="Mughal Table"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:padding="3dip"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="1"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:padding="3dip"
                            android:layout_marginLeft="20dp"/>

                        <TextView
                            android:text="7400"
                            android:textColor="#000"
                            android:gravity="right"
                            android:textStyle="italic"
                            android:textAlignment="center"
                            android:padding="3dip"
                            android:layout_marginRight="20dp"
                            android:textSize="15sp"
                            android:layout_marginLeft="20dp"/>
                    </TableRow>

                </TableLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Price - 13000 /-"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textAllCaps="true"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>