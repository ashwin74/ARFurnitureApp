<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProductDetail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical">
     <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/item_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>

                    <Button
                        android:id="@+id/ar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@color/colorAccent"
                        android:padding="5dp"
                        android:drawableLeft="@drawable/ic_menu_camera"
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:pointerIcon="wait"
                        android:text="AR"/>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_name"
                        android:layout_width="wrap_content"
                        android:layout_weight="9"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="20sp"
                        android:background="#ECE6E6"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:textAllCaps="true"
                        android:text="Scindhia Sofa"/>

                    <Button
                        android:id="@+id/favourite"
                        android:textColor="#CC1313"
                        android:textSize="20sp"
                        android:layout_marginTop="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="10dp"
                        android:textAlignment="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="&#x2665;"
                        android:layout_weight="1"
                        android:background="#ECE6E6"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/item_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="#ECE6E6"
                    android:paddingLeft="30dp"
                    android:paddingTop="5dp"
                    android:textStyle="italic"
                    android:paddingBottom="15dp"
                    android:text="Category - Sofa"/>

                <TextView
                    android:id="@+id/item_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price - 7400 Rs"
                    android:textColor="#000"
                    android:paddingTop="15dp"
                    android:paddingLeft="30dp"
                    android:paddingBottom="15dp"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textAllCaps="true"
                    android:text="Description"/>

                <TextView
                    android:id="@+id/item_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:background="#DDD8DDD8"
                    android:paddingLeft="30dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textStyle="italic"
                    android:paddingRight="30dp"
                    android:text="Scindhia Sofa is a Royal Beautifully Designed Sofa in White Color. Dimensions of this Sofa Set is 1000 x 450 x 480, made of Seesham wood imported from Japan."/>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reviews and Rating"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    android:textColor="#000"/>

                <Button
                    android:id="@+id/add_review_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Review and Rate product"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/review_rate">


        </ListView>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buy_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BUY"
            android:padding="15dp"
            android:background="#4B0082"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/add_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CART"
            android:padding="15dp"
            android:background="#E91E63"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>